{% extends 'base.html.twig' %}
{% block title %}Categories{% endblock %}
{% block body %}
<!-- Principal Content Start -->
   <div id="categories">
   	  <div class="container layout_padding">
   	    <div class="col-xs-12  col-sm-push-2">
       	   <h1 class="custom_heading">Cate<span>go</span>ries</h1><br>
		   <h3 class="custom_subheading">Create a new category</h3><br>
		   {{ form_start(form) }}
			{{ form_row(form.name,  {'attr': {'class':'form-control'}}) }}<br>
            {{ form_row(form.Send,  {'attr': {'class':'btn btn-lg btn-primary'}}) }}
			{{ form_end(form) }}
       	   <hr class='divider'>
		   <div>
	<table class="table">
		<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Name</th>
			<th scope="col">Delete</th>
		</tr>
		</thead>
		<tbody>
		{% for category in categories %}
		<tr>
			<th scope="row">{{ category.id }}</th>
			<td>
				{{ category.name }}
			</td>
			<td>
			{% if is_granted('ROLE_ADMIN') %}
	    <a href="{{ path('delete_category', {'id' :  category.id})}}" class="btn btn-primary">Delete Category</a>
		</td>
        {% endif %}
		</tr>
		{% endfor %}
		</tbody>
	</table>
</div>
       	</div>   
   	  </div>
   </div>
<!-- Principal Content Start -->
{% endblock %}
